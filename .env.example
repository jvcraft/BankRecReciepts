# Server Configuration
PORT=3000
NODE_ENV=development

# Production URL (required for production)
# Set this to your domain, e.g., https://yourdomain.com
APP_URL=http://localhost:3000

# CORS - Allowed origins (comma-separated for multiple domains)
# In production, set this to your frontend domain(s)
ALLOWED_ORIGINS=http://localhost:3000

# Firebase Configuration (Server-side - Admin SDK)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Firebase Emulators for local development
# FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
# FIRESTORE_EMULATOR_HOST=localhost:8080

# Optional: Logging level (error, warn, info, debug)
LOG_LEVEL=info
